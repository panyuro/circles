<% if @blogs.empty? %>
  <h2 class="mt-20">快来创建属于你的第一篇博客吧！<%= link_to '点击创建', new_blog_path, method: "get", class: 'btn btn-primary' %>
  </h2>
  <div class="ml-500"><%= image_tag("pikaqiu.jpg") %></div>
<% else %>
  <table class="table table-striped">
    <tr>
      <th>博客标题</th>
      <th>博客作者</th>
      <th>发布时间</th>
    </tr>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog_path(blog) %>
          <% blog.tags.each do |tag| %>
            <span class="badge"><%= tag.title %></span>
          <% end -%>
        </td>
        <td><%= blog.user.username %></td>
        <td><%= blog.created_at.to_s %></td>
      </tr>
    <% end -%>
  </table>
  <%= will_paginate @blogs %>
<% end -%>