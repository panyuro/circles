<table class="table table-striped">
  <% if @blogs.empty? %>
    <h2 class="mt-200">快来创建属于你的第一篇博客吧！</h2>
  <% else %>
    <tr>
      <th>博客标题</th>
      <th>博客作者</th>
      <th>发布时间</th>
    </tr>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog_path(blog) %>
          <% blog.tags.each do |tag| %>
            <span class="badge"><%= tag.title %></span>
          <% end -%>
        </td>
        <td><%= blog.user.username %></td>
        <td><%= blog.created_at.to_s %></td>
      </tr>
    <% end -%>
    </table>
    <%= will_paginate @blogs %>
  <% end -%>