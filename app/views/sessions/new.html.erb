<div class="show-form-container col-md-offset-5">
  <h1>Login</h1>
  <%= form_for :session, url: sessions_path do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: '邮箱', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: '密码', class: "form-control" %>
    </div>
    <%= f.submit "登录", class: "btn btn-primary" %>
    <%= link_to "注册", new_user_path, class: 'btn btn-primary' %>
  <% end -%>
</div>