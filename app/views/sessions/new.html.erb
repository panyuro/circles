<h1>用户登录</h1>
<div class="container">
  <%= form_tag sessions_path method: "post" do %>
    <div class="form-group">
      <%= text_field_tag :email, params[:email], placeholder: '邮箱' %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, params[:password], placeholder: '密码' %>
    </div>
    <p class="warning"><%= flash[:notice] %></p>
    <%= submit_tag "登录", class: "btn btn-default" %>
    <%= link_to "注册", new_user_path, class: 'btn btn-default' %>
  <% end -%>
</div>