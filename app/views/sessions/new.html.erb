<h1>Login</h1>
<div class="container">
  <%= form_tag sessions_path method: "post" do %>
    <div class="form-group">
      <%= email_field_tag :email, params[:email], placeholder: '邮箱', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, params[:password], placeholder: '密码', class: "form-control" %>
    </div>
    <%= submit_tag "登录", class: "btn btn-primary" %>
    <%= link_to "注册", new_user_path, class: 'btn btn-primary' %>
  <% end -%>
</div>