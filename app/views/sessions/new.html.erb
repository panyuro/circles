<h1>用户登录</h1>
<%= form_tag sessions_path method: "post" do %>
  <div class="form-group">
    <%= text_field_tag :username, placeholder= "用户名", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= password_field_tag :password, placeholder = "密码", class: "form-control" %>
  </div>
  <%= submit_tag "登录" , class: "btn btn-default"%>
  <%= link_to "注册", new_user_path, class: 'btn-default' %>
<% end -%>