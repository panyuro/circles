<div class="show-form-container col-md-offset-5">
  <h1> Sign up</h1>
  <%= form_for @user, url: signup_path, method: :post do |f| %>
    <%= render 'shared/error_message' %>
    <div class="form-group">
      <%= f.text_field :username, placeholder: "用户名", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "邮箱", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "密码", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "密码", class: "form-control" %>
    </div>
    <%= f.submit "注册", class: "btn btn-danger" %>
    <%= link_to "登录", new_session_path, class: "btn btn-danger" %>
  <% end -%>
</div>