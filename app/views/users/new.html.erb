<h1> 用户注册</h1>
<div class="container">
  <%= form_for @user, url: users_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.text_field :username, placeholder: "用户名" %>
    </div>
    <div class="form-group">
      <%= f.text_field :email, placeholder: "邮箱" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "密码" %>
    </div>
    <% @user.errors.messages.values.flatten.each do |error| %>
      <p class="warning"><%= error %></p>
    <% end -%>
    <%= f.submit "注册", class: "btn btn-default" %>
    <%= link_to "登录", new_session_path, class: "btn btn-default" %>
  <% end -%>
</div>